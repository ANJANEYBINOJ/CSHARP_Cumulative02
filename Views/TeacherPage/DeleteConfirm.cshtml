@model Cumulative01.Models.Teacher
@{
    ViewData["Title"] = "Confirm Delete";
    Layout = "~/Views/Shared1/_Layout.cshtml";
}

<h2>Confirm Delete</h2>

<div class="alert alert-danger">
    Are you sure you want to delete <strong>@Model.FirstName @Model.LastName</strong>?
</div>

<form method="post" action="/TeacherPage/Delete/@Model.Id">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/TeacherPage/List" class="btn btn-secondary">Cancel</a>
</form>
