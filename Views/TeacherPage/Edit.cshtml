@model Cumulative01.Models.Teacher
@{
    ViewData["Title"] = "Edit Teacher";
    Layout = "~/Views/Shared1/_Layout.cshtml";
}

<h2>Edit Teacher</h2>

<form method="post" action="/TeacherPage/Update/@Model.Id">
    <div class="mb-3">
        <label>First Name</label>
        <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Last Name</label>
        <input type="text" name="LastName" value="@Model.LastName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Hire Date</label>
        <input type="date" name="HireDate" value="@Model.HireDate.ToString("yyyy-MM-dd")" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
